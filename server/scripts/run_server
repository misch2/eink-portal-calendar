#!/bin/bash

# load ENV settings
dir=$(dirname $0)
. $dir/../.env
export MOJO_MODE MOJO_LOG_LEVEL MOJO_SECRET_PASSPHRASE

# run the webserver
echo "starting server in $MOJO_MODE mode"
if [ $MOJO_MODE == "development" ]; then
    cd $dir/.. && morbo -v -l 'http://*:8081' -w templates app
else
    cd $dir/.. && carton exec ./app daemon -m $MOJO_MODE -l "http://[::]:${PORT}"
fi
