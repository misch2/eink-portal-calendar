<!DOCTYPE html>

<html lang="en">

<head>
    <title>Portal calendar</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Latest compiled and minified CSS -->
    <link href="//cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="//cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    %= stylesheet '/css/global.css'
</head>

<body>
    <div class="container">
        <h1>Portal calendar</h1>

        % my $display_name;
        % my $display_number;
        % if ($display) {
        %   $display_name = $display ? $display->name : 'Unknown display';
        %   $display_number = $display->id;
            <h4>Selected display: <%= $display_name %></h4>
        % }

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-main">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar-main">
                    <ul class="navbar-nav">
                        % if ($display) {
                            <li class="nav-item">
                                <a class="nav-link <%= $nav_link eq 'index' ? 'active' : '' %>" href="/home/<%= $display_number %>">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= $nav_link eq 'compare' ? 'active' : '' %>" href="/test/<%= $display_number %>">Test page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= $nav_link eq 'config_ui' ? 'active' : '' %>" href="/config_ui/<%= $display_number %>">Config</a>
                            </li>
                        % } else {
                            <li class="nav-item">
                                <a class="nav-link <%= $nav_link eq 'index' ? 'active' : '' %>" href="/">Display select</a>
                            </li>
                        % }
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Minion jobs monitor</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <hr>

        <%= content %>
    </div>
</body>

</html>