% layout 'bootstrap5';

% my $disp_obj = get_display_by_id($display);

<!-- https://css-tricks.com/snippets/css/a-guide-to-flexbox/ -->
<div style="display: flex; flex-flow: row wrap; justify-content: space-around;">

    <div>
        Calendar page <a href="/calendar/<%= $display %>/html">as HTML</a>:
        <br>
        <iframe src="/calendar/<%= $display %>/html" width="480" height="800" style="border: 1px solid black"></iframe>

    </div>
    <div>
        Calendar page <a href="/calendar/bitmap?format=png&mac=<%= $disp_obj->mac %>">as IMG</a> with fixed size:
        <br>
        <img src="/calendar/bitmap?format=png&mac=<%= $disp_obj->mac %>" style="border: 1px solid black">
    </div>
</div>