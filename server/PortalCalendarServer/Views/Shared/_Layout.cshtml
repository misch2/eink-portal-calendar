@using PortalCalendarServer.Controllers
@using PortalCalendarServer.Models.DatabaseEntities
@using PortalCalendarServer.Services
@using PortalCalendarServer.Services.BackgroundJobs
@inject IDisplayService displayService
@inject ImageRegenerationService imageRegenerationService
@inject IWebHostEnvironment environment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Calendar</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery (required for Bootstrap JS) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <link href="/css/global.css" rel="stylesheet" />
    @if (environment.IsDevelopment())
    {
        <link href="/css/environment/development.css" rel="stylesheet" />
    }
    @if (environment.IsStaging())
    {
        <link href="/css/environment/staging.css" rel="stylesheet" />
    }
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        Display? display = null;
        if (ViewBag.Display is Display d)
        {
            display = d;
        }
        var activeCount = imageRegenerationService.GetActiveTaskCount();
        var allDisplays = displayService.GetAllDisplays().Where(x => !x.IsDefault()).ToList();
        var navLink = ViewData["NavLink"]?.ToString();
    }

    <div class="page-shell">

        <!-- ── Left sidebar ─────────────────────────────────────────── -->
        <div id="sidebar">
            <div class="sidebar-body">
                <nav class="nav flex-column">

                    <span class="nav-section-title">Displays</span>
                    <a class="nav-link @(navLink == "index" ? "active" : "")"
                       href="@Url.Action(nameof(UiController.SelectDisplay), "Ui")">
                        All displays
                    </a>

                    @foreach (var disp in allDisplays)
                    {
                        var isSelected = display?.Id == disp.Id;
                        <a class="nav-link @(isSelected ? "active" : "")"
                           href="@Url.Action(nameof(UiController.Home), "Ui", new { displayNumber = disp.Id })"
                           data-display-id="@disp.Id">
                            @disp.Name
                        </a>
                    }

                </nav>
            </div>
        </div>

        <!-- ── Main content ──────────────────────────────────────────── -->
        <div class="main-content">

            <div class="top-bar">
                <h1 class="mb-0">
                    Portal calendar @if (activeCount > 0)
                    {
                        <text>⏳</text>
                    }
                </h1>
            </div>

            @if (display != null)
            {
                TimeSpan? last_contact_ago = null;
                if (displayService.GetLastVisit(display) != null)
                {
                    last_contact_ago = DateTime.UtcNow - displayService.GetLastVisit(display)!.Value;
                }

                var last_voltage = displayService.GetVoltage(display);
                var battery_percent = displayService.GetBatteryPercent(display);

                <h4>Selected display: @display.Name</h4>

                if (!display.IsDefault())
                {
                    <p class="row-fluid">
                        Last contact:
                        @if (last_contact_ago.HasValue)
                        {
                            var lc_hours = last_contact_ago.Value.Hours;
                            var lc_minutes = last_contact_ago.Value.Minutes;
                            if (lc_hours > 0)
                            {
                                @($"{lc_hours} hours ")
                            }
                            @($"{lc_minutes} minutes ago.")
                        }
                        else
                        {
                            @($"never.")
                        }

                        Next wakeup:
                        @{
                            var nextWakeupInfo = displayService.GetNextWakeupTime(display);
                            int nw_minutes = nextWakeupInfo.SleepInSeconds / 60;
                            int nw_seconds = nextWakeupInfo.SleepInSeconds % 60;
                            @($"in {nw_minutes} minutes and {nw_seconds} seconds.")
                        }

                        Voltage: @(last_voltage?.ToString("F2") ?? "(unknown)") V (@(battery_percent?.ToString("F0") ?? "unknown") %).

                        OTA mode: @(displayService.GetConfigBool(display, "ota_mode") ? "on" : "off").

                    </p>
                }

                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-main">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbar-main">
                            <ul class="navbar-nav">
                                @if (!display.IsDefault())
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(navLink == "home" ? "active" : "")" href="@Url.Action(nameof(UiController.Home), "Ui", new { displayNumber = display.Id })">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(navLink == "compare" ? "active" : "")" href="@Url.Action(nameof(UiController.Test), "Ui", new { displayNumber = display.Id })">Test page</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link @(navLink == "config_ui" ? "active" : "")" href="@Url.Action(nameof(UiController.ConfigUiShow), "Ui", new { displayNumber = display.Id })">Config</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            }

            <hr />

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>

    </div>

    <script>
        (function () {
            // Patterns where we know how to swap the display number: /home/{n}, /test/{n}, /config_ui/{n}
            var displayUrlPattern = /^(\/(?:home|test|config_ui)\/)(\d+)(\/.*)?$/;

            document.querySelectorAll('[data-display-id]').forEach(function (a) {
                a.addEventListener('click', function (e) {
                    var match = window.location.pathname.match(displayUrlPattern);
                    if (match) {
                        e.preventDefault();
                        var prefix = match[1];
                        var suffix = match[3] || '';
                        var hash = window.location.hash; // read at click time, not at load time
                        window.location.href = prefix + a.dataset.displayId + suffix + hash;
                    }
                    // else: no match, follow the default href (Home page for that display)
                });
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
