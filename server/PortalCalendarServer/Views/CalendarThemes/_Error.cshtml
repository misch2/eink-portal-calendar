@using PortalCalendarServer.Models.POCOs
@model ErrorViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Page Rendering Error</title>

    @* EPD Colors *@
    @if (Model.CssColors != null)
    {
        @await Html.PartialAsync("Includes/_EpdColors.cshtml", Model.CssColors)
    }

    @* Stylesheets *@
    <link rel="stylesheet" href="/css/calendar_themes/error.css" asp-append-version="true" />
</head>

<body>
    <div id="visible-area">
        <div class="error-icon">⚠️</div>
        <div class="error-title">Error</div>
        <div class="error-subtitle">Page rendering failed</div>
        <div class="error-message">
            @Model.Message
            @if (Model.ShowDetails && !string.IsNullOrEmpty(Model.Details))
            {
                <pre>@Model.Details</pre>
            }
        </div>
        <div class="error-timestamp">@Model.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") UTC</div>
    </div>
</body>
</html>
