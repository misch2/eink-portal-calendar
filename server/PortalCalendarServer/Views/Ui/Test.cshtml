@model Display
@using PortalCalendarServer.Controllers
@using PortalCalendarServer.Models.DatabaseEntities

<!-- https://css-tricks.com/snippets/css/a-guide-to-flexbox/ -->
<div style="display: flex; flex-flow: row wrap; justify-content: space-around;">
    <div>
        Calendar page <a href="/calendar/@Model.Id/html?preview_colors=true">as HTML</a>:
        <br>
        <iframe src="/calendar/@Model.Id/html?preview_colors=true"
                width="@Model.VirtualWidth()"
                height="@Model.VirtualHeight()"
                style="border: 1px solid black">
        </iframe>
    </div>
    <div>
        @{
            var controllerName = nameof(ApiController).Replace("Controller", "");
            var url = Url.Action(nameof(ApiController.Bitmap), controllerName, new { preview_colors = true, format = "png", mac = Model.Mac });
        }
        Calendar page <a href="@url">as IMG</a> with fixed size:
        <br>
        <img src="@url"
             style="border: 1px solid black"
             alt="Calendar as image">
    </div>
</div>
