@using PortalCalendarServer.Models.Entities
@using PortalCalendarServer.Services
@inject IDisplayService displayService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Calendar</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery (required for Bootstrap JS) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <link href="/css/global.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        Display? display = null;
        if (ViewBag.Display is Display d)
        {
            display = d;
        }
    }
    <div class="container">
        <h1>Portal calendar</h1>

        @if (display != null)
        {
            TimeSpan? last_contact_ago = null;
            if (display.LastVisit() != null)
            {
                last_contact_ago = DateTime.UtcNow - display.LastVisit()!.Value;
            }

            @* FIXME waiting tasks *@

            var last_voltage = display.Voltage();
            var battery_percent = display.BatteryPercent();

            <h4>Selected display: @display.Name</h4>

            if (!display.IsDefault())
            {
                <p class="row-fluid">
                    Last contact:
                    @if (last_contact_ago.HasValue)
                    {
                        var lc_hours = last_contact_ago.Value.Hours;
                        var lc_minutes = last_contact_ago.Value.Minutes;
                        if (lc_hours > 0)
                        {
                            @($"{lc_hours} hours ")
                        }
                        @($"{lc_minutes} minutes ago.")
                    }
                    else
                    {
                        @($"never.")
                    }

                    Next wakeup:
                    @{
                        var nextWakeupInfo = display.NextWakeupTime();
                        int nw_minutes = nextWakeupInfo.SleepInSeconds / 60;
                        int nw_seconds = nextWakeupInfo.SleepInSeconds % 60;
                        @($"in {nw_minutes} minutes and {nw_seconds} seconds.")
                    }


                    Voltage: @(last_voltage?.ToString("F2") ?? "(unknown)") V (@(battery_percent?.ToString("F0") ?? "unknown") %).

                    OTA mode: @(displayService.GetConfigBool(display, "ota_mode") ? "on" : "off").

                </p>
            }
        }

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-main">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar-main">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["NavLink"]?.ToString() == "index" ? "active" : "")" href="/">Display select</a>
                        </li>

                        @if (display != null)
                        {
                            @if (!display.IsDefault())
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["NavLink"]?.ToString() == "home" ? "active" : "")" href="/home/@display.Id">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["NavLink"]?.ToString() == "compare" ? "active" : "")" href="/test/@display.Id">Test page</a>
                                </li>

                            }
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["NavLink"]?.ToString() == "config_ui" ? "active" : "")" href="/config_ui/@display.Id">Config</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
