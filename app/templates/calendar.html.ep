<html>
%= stylesheet '/css/calendar.css'

<body>
    <div id="spacer">
        <div class="top-month-header">
            <div class="month-name">
                <%= uc($date->month_name) %>
            </div>
        </div>

        <div class="day-number-big">
            <%= $date->day %>
        </div>

        <div class="day-of-week-block">
            <div class="dow-number-and-name">
                <div>
                    <%= $date->day .'/'. $date->month_length %>
                </div>
                <div>
                    <%= uc($date->day_name) %>
                </div>
            </div>
            <div class="separator"></div>
            <div class="bunch-of-bars">
                % for (1 .. $date->day) {
                <div class="bar"></div>
                % }
            </div>
        </div>

        <div class="icons-container">
            <div class="icon icon-a1"></div>
            <div class="icon icon-a2"></div>
            <div class="icon icon-a3"></div>
            <div class="icon icon-a4"></div>
            <div class="icon icon-a1"></div>
            <div class="icon icon-a2"></div>
            <div class="icon icon-a3"></div>
            <div class="icon icon-a4"></div>
        </div>

        <img src="/images/Aperture_Laboratories_Logo.png" class="aperture-logo">
    </div>
</body>

</html>